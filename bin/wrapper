#!/usr/bin/env php
<?php

if(!file_exists('modules/custom/validator/lib/TitleValidator.php')) {
  copy('src/TitleValidator.php', 'modules/custom/validator/lib/TitleValidator.php');
  echo "File TitleValidator copied to validator module\n\n";
}
if(!file_exists('cnf/config.yml')) {
  copy('cnf/config.yml.dist', 'cnf/config.yml');
  echo "File config.yml copied to cnf directory\n\n";
}
$path = __DIR__ . "/../";
exec($path . "bin/settings_compile cnf/config.yml cnf/settings.php");
exec($path . "bin/rootcanal");
